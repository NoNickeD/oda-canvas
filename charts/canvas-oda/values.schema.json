{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "api-operator-istio": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": true
          }
        },
        "required": ["enabled"]
      },
      "api-operator-kong": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": false
          }
        },
        "required": ["enabled"]
      },
      "api-operator-apisix": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "default": false
          }
        },
        "required": ["enabled"]
      }
    },
    "oneOf": [
      {
        "properties": {
          "api-operator-istio": {
            "properties": {
              "enabled": { "const": true }
            }
          },
          "api-operator-kong": {
            "properties": {
              "enabled": { "const": false }
            }
          },
          "api-operator-apisix": {
            "properties": {
              "enabled": { "const": false }
            }
          }
        }
      },
      {
        "properties": {
          "api-operator-istio": {
            "properties": {
              "enabled": { "const": false }
            }
          },
          "api-operator-kong": {
            "properties": {
              "enabled": { "const": true }
            }
          },
          "api-operator-apisix": {
            "properties": {
              "enabled": { "const": false }
            }
          }
        }
      },
      {
        "properties": {
          "api-operator-istio": {
            "properties": {
              "enabled": { "const": false }
            }
          },
          "api-operator-kong": {
            "properties": {
              "enabled": { "const": false }
            }
          },
          "api-operator-apisix": {
            "properties": {
              "enabled": { "const": true }
            }
          }
        }
      }
    ],
    "errorMessage": "Only one of api-operator-istio.enabled, api-operator-kong.enabled, or api-operator-apisix.enabled must be true."
  }
  