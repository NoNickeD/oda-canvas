#FROM python:3.12
FROM python:3.12-alpine

#RUN pip install kopf
#RUN pip install kubernetes==27.2.0
#RUN pip install cloudevents

RUN pip install kopf==1.37.2 \
    && pip install kubernetes==27.2.0 \
    && pip install cloudevents \
    && pip install PyYAML \
    && pip install requests 

#Copy the componentOperator  securityControllerKeycloak  secconkeycloak code

COPY identity-config/keycloak/identityConfigOperatorKeycloak.py /identityOperator/
COPY identity-config/keycloak/keycloakUtils.py /identityOperator/
COPY identity-config/keycloak/log_wrapper.py /identityOperator/
COPY component-management/componentOperator.py /componentOperator/
COPY component-management/log_wrapper.py /componentOperator/

# Setting up required ENV variables
ARG CICD_BUILD_TIME
ENV CICD_BUILD_TIME $CICD_BUILD_TIME
ARG GIT_COMMIT_SHA
ENV GIT_COMMIT_SHA $GIT_COMMIT_SHA

# run the KOPF framework with component and keycloak operators

CMD kopf run --namespace=$COMPONENT_NAMESPACE --verbose /componentOperator/componentOperator.py /identityOperator/identityConfigOperatorKeycloak.py